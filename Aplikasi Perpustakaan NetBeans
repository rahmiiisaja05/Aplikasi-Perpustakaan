    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
String USERNAME ="Rahmi";
String PASSWORD ="202013011";
if(USERNAME.equalsIgnoreCase(jTextField1.getText()) && PASSWORD.equalsIgnoreCase(jTextField2.getText()))   {
        
    this.setVisible(false);
    new MenuUtama().setVisible(true);
    }else{
            javax.swing.JOptionPane.showMessageDialog(null,"MAAF USERNAME DAN PASSWORD YANG ANDA MASUKKAN SALAH !!");
            jTextField1.setText("");
            jTextField2.setText("");
            jTextField1.requestFocus();
            }
